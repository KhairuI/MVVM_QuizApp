<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".view.DetailsFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:src="@drawable/placeholder_image"
        android:layout_height="250dp">

    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/singleQuizTitleId"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Quiz Title"
        android:textColor="@color/colorPrimary"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/singleQuizDescriptionId"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="Quiz Description"
        android:textColor="@color/colorLightText"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatTextView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsDifficultyId"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Difficulty"
            android:textColor="@color/colorLightText"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsDifficultyValueId"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="N/A"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorLightText"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsTotalQuestionId"
            android:layout_below="@id/detailsDifficultyId"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Total Question"
            android:textColor="@color/colorLightText"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsTotalQuestionValueId"
            android:layout_marginTop="10dp"
            android:layout_below="@id/detailsDifficultyValueId"
            android:layout_marginLeft="10dp"
            android:text="N/A"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorLightText"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsLastScoreId"
            android:layout_below="@id/detailsTotalQuestionId"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Your Last Score"
            android:textColor="@color/colorLightText"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsLastScoreValueId"

            android:layout_marginTop="10dp"
            android:layout_below="@id/detailsTotalQuestionValueId"
            android:layout_marginLeft="10dp"
            android:text="N/A"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorLightText"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatTextView>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:text="Start Quiz"
        android:textAllCaps="false"
        android:background="@drawable/details_button"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatButton>


</androidx.appcompat.widget.LinearLayoutCompat>